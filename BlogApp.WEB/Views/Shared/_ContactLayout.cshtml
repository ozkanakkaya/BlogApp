<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Blog Kervanı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Blog Kervanı, en güncel ve özgün blog yazılarına ev sahipliği yapan bir platformdur. Tüm ilgi alanlarına yönelik yazıların yer aldığı Blog Kervanı'nda keşfedeceğiniz birçok ilginç konu bulacaksınız. Ücretsiz üyelik ile her gün yeni bir şeyler öğrenin ve deneyimleyin." />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/css/contact.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/css/single.css">
    <link href="~/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/css/fontawesome-all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>


</head>

<body>
    <!--Header-->

    <header>

        @await Html.PartialAsync("_HeaderPartial")

        @await Html.PartialAsync("_MainMenuPartial")

    </header>

    <!--/main-->
    <section class="main-content-w3layouts-agileits">

        @RenderBody()

    </section>
    <!--//main-->
    <!--footer-->
    <footer>
        <div class="w3layouts-agile-copyrightbottom text-center">
            <p>
                © @DateTime.Now.Year Blog Kervanı. Tüm Hakları Saklıdır.
            </p>
        </div>
    </footer>
    <!---->
    <!-- js -->
    <script src="~/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/js/move-top.js"></script>
    <script src="~/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/js/jquery-2.2.3.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    @await RenderSectionAsync("Scripts",false)
    @await Component.InvokeAsync("NToastNotify")
</body>

</html>

