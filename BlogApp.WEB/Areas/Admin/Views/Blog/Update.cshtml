@model BlogApp.WEB.Areas.Admin.Models.BlogUpdateViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Blog Yazısı Düzenle";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Yönetim Paneli</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Blog" asp-action="Index">Blog Yazıları</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Blog" asp-action="Update">Düzenle</a></li>
</ol>
<form asp-controller="Blog" asp-action="Update" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group">
                        <input type="text" id="blogTitle" class="form-control" placeholder="Blog Yazısı Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Temel Konfigürasyonlar
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Kategori Ekle</label>
                        <div class="d-flex flex-column">
                            <select id="categoryList" class="form-control" asp-for="CategoryIds" asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
                                <option></option>
                            </select>
                            <span asp-validation-for="CategoryIds" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Etiket Ekle</label>
                        <input class="form-control" asp-for="Tags" placeholder="Lütfen etiketleri virgül ile ayırınız." />
                        <span class="text-danger" asp-validation-for="Tags"></span>
                    </div>
                    <div class="form-group">
                        <label>Mevcut Görsel</label>
                        <input asp-for="ImageUrl" type="hidden" />
                        <img class="my-image" src="~/img/@Model.ImageUrl" alt="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" id="imageUpload" accept="image/*" class="form-control-file" asp-for="ImageFile" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsActive" />
                        <label>Aktif Mi?</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Güncelle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
