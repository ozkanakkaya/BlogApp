@model BlogApp.Core.DTOs.Concrete.RoleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Roller";
    var errorMessage = ViewBag.ErrorMessage as string;
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Yönetim Paneli</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Role" asp-action="Index">Roller</a></li>
</ol>
@if (string.IsNullOrEmpty(errorMessage))
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Roller
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            <tr name="@role.Id">
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage <br />
        Yönetim Paneli anasayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>
}

@section Scripts
    {
    <script src="~/AdminLTE/js/roleIndex.js" type="application/ecmascript"></script>
}